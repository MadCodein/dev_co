extends ../layout.pug

block main
    #home-section.site-wrap
        .site-mobile-menu.site-navbar-target
            .site-mobile-menu-header
                .site-mobile-menu-close.mt-3
                    span.icon-close2.js-menu-toggle
            .site-mobile-menu-body
        header.site-navbar.site-navbar-target(role='banner')
            .container
                .row.align-items-center.position-relative
                    .col-3
                        .site-logo
                            a.font-weight-bold(href='/') TechDev.
                    .col-9.text-right
                        span.d-inline-block.d-lg-block
                            a.text-white.site-menu-toggle.js-menu-toggle.py-5.text-white(href='#')
                                span.icon-menu.h3.text-white
                        nav.site-navigation.text-right.ml-auto.d-none.d-lg-none(role='navigation')
                            ul.site-menu.main-menu.js-clone-nav.ml-auto
                                li
                                    a.nav-link(href='/') Home
                                li
                                    a.nav-link(href='/about') About
                                li
                                    a.nav-link(href='/works') Work
                                li.active
                                    a.nav-link(href='/contact') Contact
        .ftco-blocks-cover-1
            .site-section-cover.overlay(style="background-image: url('https://images.pexels.com/photos/1591062/pexels-photo-1591062.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500')")
                .container
                    .row.align-items-center.justify-content-center
                        .col-md-7.text-center
                            h1.mb-4.text-white Contact Us
                            p.mb-4  Send us an email!!! 
        .site-section
            .container
                .row
                    .col-lg-8.mb-5
                        form(action='#', method='post')
                            .form-group.row
                                .col-md-6.mb-4.mb-lg-0
                                    input.form-control(type='text', placeholder='First name')
                                .col-md-6
                                    input.form-control(type='text', placeholder='First name')
                            .form-group.row
                                .col-md-12
                                    input.form-control(type='text', placeholder='Email address')
                            .form-group.row
                                .col-md-12
                                    textarea.form-control(name='', id='', placeholder='Write your message.', cols='30', rows='10')
                            .form-group.row
                                .col-md-6.mr-auto
                                    input.btn.btn-block.btn-primary.text-white.py-3.px-5(type='submit', value='Send Message')
                    .col-lg-4.ml-auto
                        .bg-white.p-3.p-md-5
                            h3.text-black.mb-4 Contact Info
                            ul.list-unstyled.footer-link
                                li.d-block.mb-3
                                    span.d-block.text-black Address:
                                    span 34 Street Name, City Name Here, United States
                                li.d-block.mb-3
                                    span.d-block.text-black Phone:
                                    span +1 242 4942 290
                                li.d-block.mb-3
                                    span.d-block.text-black Email:
                                    span info@yourdomain.com
