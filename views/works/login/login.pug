            // Sign in  Form
            section.sign-in
                .container
                    .signin-content
                        .signin-image
                            figure
                                img(src='../img/signin-image.jpg', alt='sign up image')
                            a.signup-image-link(href='/signup') Create an account
                        .signin-form
                            h2.form-title#data(data-message=alertMessage data-title=alertTitle data-type=alertType data-timer=alertTimer) Sign in
                            form#login-form.register-form.validate-form(method='POST')
                                if alertMessage
                                    script.
                                        Swal.fire({
                                            title: document.querySelector('#data').getAttribute('data-title'),
                                            text: document.querySelector('#data').getAttribute('data-message'),
                                            type: document.querySelector('#data').getAttribute('data-type'),
                                            timer: document.querySelector('#data').getAttribute('data-timer'),
                                            showConfirmButton: false,
                                        });
                                        if(document.querySelector('#data').getAttribute('data-title') === 'Error' ) {
                                            setTimeout(function() {
                                                location.assign('/verify_email')
                                            },3000)
                                        }
                                        //- if(document.querySelector('#data').getAttribute('data-type') === 'success' ) {
                                        //-     setTimeout(function() {
                                        //-         location.assign('/admin/signup')
                                        //-     },3000)
                                        //- }
                                .form-group
                                    .wrap-input100.validate-input(data-validate='Email field is required')
                                        label(for='your_name')
                                            i.zmdi.zmdi-account.material-icons-name
                                        input#your_name.input100(type='email', name='email', placeholder='Your Email')
                                .form-group
                                    .wrap-input100.validate-input(data-validate='Password field is required')
                                        label(for='your_pass')
                                            i.zmdi.zmdi-lock
                                        input#your_pass.input100(type='password', name='password', placeholder='Password')
